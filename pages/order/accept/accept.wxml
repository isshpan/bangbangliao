<view style="margin: 6rpx 0rpx 20rpx 10rpx;">
    <text style="font-family: serif; font-size: 40rpx; font-weight: bolder;">您已接受此单</text>
</view>

<view style="margin: 20rpx 10rpx 0 10rpx; padding-bottom: 20rpx; background: #f9f9f9;">
    <van-row>
        <van-col span="2">
            <image src="{{profilePhoto}}" style="width: 90rpx; height: 90rpx;"></image>
        </van-col>
        <van-col offset="2" span="2">
            <view style="font-family: serif; font-size: 24rpx; font-weight: 300; margin-top: 30rpx;">
                {{name}}</view>
        </van-col>
        <van-col offset="2" span="3">
            <view style="font-family: serif; font-size: 24rpx; font-weight: 300; margin-top: 30rpx;">
                {{time}}</view>
        </van-col>
        <van-col offset="3" span="4">
            <view style="font-family: serif; font-size: 24rpx; font-weight: 300; margin-top: 30rpx;">
                <text>标签：</text>
                <text>{{tag}}</text>
            </view>
        </van-col>
        <van-col offset="1" span="5">
            <view style="font-family: serif; font-size: 24rpx; font-weight: 300; margin-top: 30rpx;">
                <text>状态：</text>
                <text>已领取</text>
            </view>
        </van-col>
    </van-row>

    <van-row>
        <view style="margin: 0 36rpx 40rpx 16rpx;">
            <text style="font-family: serif; font-size: 24rpx; line-height: 8rpx;">{{description}}</text>
        </view>
    </van-row>
    
    <van-row>
        <van-col offset="6" span="12"><button size="mini" style="width: 100%;" bindtap="navigateToAddFriend">加好友</button></van-col>
    </van-row>
</view>